# RevenueCat Configuration (required for payments)
# Get API keys from https://app.revenuecat.com -> Project Settings -> API Keys
EXPO_PUBLIC_REVENUECAT_APPLE_API_KEY=your-revenuecat-apple-api-key
EXPO_PUBLIC_REVENUECAT_GOOGLE_API_KEY=your-revenuecat-google-api-key

# Sentry Configuration (recommended for crash reporting)
# Get DSN from https://sentry.io -> Project Settings -> Client Keys (DSN)
EXPO_PUBLIC_SENTRY_DSN=your-sentry-dsn

# API Configuration (optional - only if you have a backend)
EXPO_PUBLIC_API_URL=https://api.yourapp.com

# App Store IDs (for store review prompts and app updates)
# Get App Store ID from App Store Connect -> App Information -> Apple ID
EXPO_PUBLIC_APP_STORE_ID=123456789
# Your Android package name
EXPO_PUBLIC_PLAY_STORE_ID=com.yourcompany.yourapp

# Universal Links / Deep Linking Domain
# Your domain for Universal Links (iOS) and App Links (Android)
EXPO_PUBLIC_UNIVERSAL_LINKS_DOMAIN=yourapp.com

# AdMob Configuration (optional - only if using ads for monetization)
# Get App IDs from https://admob.google.com -> Apps -> App settings
EXPO_PUBLIC_ADMOB_APP_ID_IOS=ca-app-pub-xxxxxxxxxxxxxxxx~yyyyyyyyyy
EXPO_PUBLIC_ADMOB_APP_ID_ANDROID=ca-app-pub-xxxxxxxxxxxxxxxx~yyyyyyyyyy

# AdMob Ad Unit IDs
# Get from https://admob.google.com -> Apps -> Ad units
EXPO_PUBLIC_ADMOB_BANNER_ID_IOS=ca-app-pub-xxxxxxxxxxxxxxxx/yyyyyyyyyy
EXPO_PUBLIC_ADMOB_BANNER_ID_ANDROID=ca-app-pub-xxxxxxxxxxxxxxxx/yyyyyyyyyy
EXPO_PUBLIC_ADMOB_INTERSTITIAL_ID_IOS=ca-app-pub-xxxxxxxxxxxxxxxx/yyyyyyyyyy
EXPO_PUBLIC_ADMOB_INTERSTITIAL_ID_ANDROID=ca-app-pub-xxxxxxxxxxxxxxxx/yyyyyyyyyy
EXPO_PUBLIC_ADMOB_REWARDED_ID_IOS=ca-app-pub-xxxxxxxxxxxxxxxx/yyyyyyyyyy
EXPO_PUBLIC_ADMOB_REWARDED_ID_ANDROID=ca-app-pub-xxxxxxxxxxxxxxxx/yyyyyyyyyy
