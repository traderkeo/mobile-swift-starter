{
  "name": "@starter/api",
  "version": "0.0.0",
  "private": true,
  "scripts": {
    "dev": "wrangler dev",
    "build": "wrangler deploy --dry-run",
    "deploy": "wrangler deploy",
    "typecheck": "tsc --noEmit",
    "lint": "eslint src/",
    "db:generate": "drizzle-kit generate",
    "db:push": "drizzle-kit push",
    "db:studio": "drizzle-kit studio",
    "db:migrate": "wrangler d1 migrations apply starter-db --local",
    "db:migrate:prod": "wrangler d1 migrations apply starter-db --remote"
  },
  "dependencies": {
    "@starter/shared": "workspace:*",
    "drizzle-orm": "^0.38.3",
    "hono": "^4.6.14",
    "jose": "^5.9.6",
    "zod": "^3.23.8"
  },
  "devDependencies": {
    "@cloudflare/workers-types": "^4.20241218.0",
    "@starter/config": "workspace:*",
    "drizzle-kit": "^0.30.1",
    "typescript": "~5.9.2",
    "wrangler": "^3.99.0"
  }
}
